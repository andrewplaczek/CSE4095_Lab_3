        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_text_capital" />

    <TextView
        android:id="@+id/subregion_text"
        android:layout_width="wrap_content"
